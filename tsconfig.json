{
  "compilerOptions": {
    "target": "ES2018",
    "strict": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "noEmitOnError": true,
    "declaration": true,
    "skipLibCheck": true,
    "outDir": "build"
  },
  "include": [
    "src"
  ]
}